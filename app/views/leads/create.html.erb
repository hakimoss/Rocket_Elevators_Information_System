<h1>Contact Us</h1>
<p>Find me in app/views/leads/create.html.erb</p>



<!-- wrapper -->
<div id="ctnWhite"> 
		<div id="wrapper">

			<hr class="m-0" /><!-- 1px line separator -->


			<!-- BUTTON CALLOUT -->
			<a href="./index.html#contact" class="btn btn-xlg btn-danger	 fs-20 fullwidth m-0 rad-0 p-40">
				<span class="font-lato fs-30">
					Did Rocket Elevator convinced you? 
					<strong>Contact us &raquo;</strong>
				</span>
			</a>
			<!-- /BUTTON CALLOUT -->

		
						<!-- FORM -->
						<div class="col-md-10 col-sm-4" style="margin: 100px 8%;">

							<h3 style="text-align: center;">A Work Faithful To The Wait</h3>

							<!-- Alert Success -->
							<div id="alert_success" class="alert alert-success mb-30">
								<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
								<strong>Thank You!</strong> Your message successfully sent!
							</div><!-- /Alert Success -->


							<!-- Alert Failed -->
							<div id="alert_failed" class="alert alert-danger mb-30">
								<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
								<strong>[SMTP] Error!</strong> Internal server error!
							</div><!-- /Alert Failed -->


							<!-- Alert Mandatory -->
							<div id="alert_mandatory" class="alert alert-danger mb-30">
								<button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
								<strong>Sorry!</strong> You need to complete all mandatory (*) fields!
							</div><!-- /Alert Mandatory -->



							
							<!-- FORM QUOTE -->
						
								<fieldset>
									<input type="hidden" name="action" value="contact_send" />

									
									<div id="div">
										<div id="number-of-apartments" class="col-md-4">
                                            <%= form.label :number_appartement %>
                                            <%= form.text_field :number_appartement, id: 'number_appartement' %>
										</div>
										<div id="number-of-floors" class="col-md-4">
                                            <%= form.label :number_floor %>
                                            <%= form.text_field :number_floor, id: 'number_floor' %>
										</div>
										<div id="number-of-basements" class="col-md-4">
                                            <%= form.label :number_basement %>
                                            <%= form.text_field :number_basement, id: 'number_basement' %>
										</div>
										<div id="number-of-companies" class="col-md-4">
                                            <%= form.label :number_compagny %>
                                            <%= form.text_field :number_compagny, id: 'number_compagny' %>
										</div>
										<div id="number-of-corporations" class="col-md-4">
                                            <%= form.label :number_corporate %>
                                            <%= form.text_field :number_corporate, id: 'number_corporate' %>
										</div>
										<div id="number-of-elevators" class="col-md-4">
                                            <%= form.label :number_elevator %>
                                            <%= form.text_field :number_elevator, id: 'number_elevator' %>					
										</div>
										<div id="number-of-parking-spots" class="col-md-4">
                                            <%= form.label :number_parking %>
                                            <%= form.text_field :number_parking, id: 'number_parking' %>
										</div>
										<div id="maximum-occupancy" class="corporateChanger col-md-4">
                                            <%= form.label :max_occupancy %>
                                            <%= form.text_field :max_occupancy, id: 'max_occupancy' %>				
										</div>
										<div id="business-hours" class="col-md-4">
                                            <%= form.label :business_hour %>
                                            <%= form.text_field :business_hour, id: 'business_hour' %>							
										</div>
									</div>
								</fieldset>

							<!-- FORM RADIO BUTTON -->

								<div style="margin-top: 50px;" class="priceShow">
									Number of elevator shafts required : <span id="elevatorShafts">0</span>
								</div>


								<div id="elevator_type" class="priceShow"> 
									<div class="row" style="margin-top: 100px;">
										<div class="col-md-4" style="display: flex; flex-direction: column; align-items: center;">
                                            <%= form.label :Standard %>
                                            <%= form.radio_button :elevator_type, 'standard' %>
										</div>
										<div class="col-md-4" style="display: flex; flex-direction: column; align-items: center;">
                                            <%= form.label :Premium %>
                                            <%= form.radio_button :elevator_type, 'premium' %>
										</div>
										<div class="col-md-4" style="display: flex; flex-direction: column; align-items: center;">
                                            <%= form.label :Excelium %>
                                            <%= form.radio_button :elevator_type, 'excelium' %>
										</div>
									</div>
								</div>
							<!-- FORM RADIO BUTTON -->

							<!-- FORM RADIO VALUE -->

								<div id="quote" class="row" style="margin-top: 130px;">
									<div id="elevator-amount" class="col-md-4" style="display: flex; flex-direction: column; align-items: center;">
                                        <%= form.label :ele_amount %>
                                        <%= form.text_field :ele_amount, id: 'ele_amount' %>
									</div>
									<div id="elevator-unit-price" class="col-md-4" style="display: flex; flex-direction: column; align-items: center;">
                                        <%= form.label :ele_price_unit %>
                                        <%= form.text_field :ele_price_unit, id: 'ele_price_unit' %>
									</div>
									<div id="elevator-total-price" class="col-md-4" style="display: flex; flex-direction: column; align-items: center;">
                                        <%= form.label :ele_total_price %>
                                        <%= form.text_field :ele_total_price, id: 'ele_total_price' %>
									</div>
									<div id="installation-fees" class="col-md-4" style="display: flex; flex-direction: column; align-items: center;">
                                        <%= form.label :inst_fee %>
                                        <%= form.text_field :inst_fee, id: 'inst_fee' %>
									</div>
									<div id="final-price" class="col-md-4" style="display: flex; flex-direction: column; align-items: center;">
                                        <%= form.label :final_price %>
                                        <%= form.text_field :final_price, id: 'final_price' %>
									</div>
									<div class="actions">
                                        <%= form.submit %>
                                    </div>
								</div>
				
						</div>
		</div>
</div>
